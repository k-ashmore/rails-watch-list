<div class="product-image">
    <%= cl_image_tag(@list.photo.key,
    width: 400, height: 300, crop: :fill) %>
</div>
<div class="product">
<% @bookmarks.each do |bookmark| %>
  <div class="product-name">
    <h2><%= bookmark.movie.title %></h2>
    <p><%= "#{bookmark.comment}" %></p>
  </div>
    <%= link_to "destroy", bookmark_path(bookmark), :method => :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>

  <% end %>
  <div>
    <%= link_to "new", new_list_bookmark_path(@list), class: 'btn btn-success' %>
  </div>
  <div>
    <p><%= link_to "Back to lists", lists_path %></p>
  </div>
